{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "paths": {
      "@/components/*": ["components/*"],
      "@/lib/*": ["lib/*"],
      "@/store/*": ["store/*"],
      "@/types/*": ["types/*"],
      "@/styles/*": ["styles/*"]
    },
    "types": ["jest", "cypress"]
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "firebaseClient.ts"],
  "exclude": ["node_modules, .yarn"]
}
